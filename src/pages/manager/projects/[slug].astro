---
import LayoutAdmin from '@/layouts/layout-admin.astro'
import TableQueues from '@/components/manager/table-queue.astro'
import TableInstance from '@/components/manager/table-instance.astro'
import { IInstance, IQueue } from '@/interfaces/projects.interface'

const { slug } = Astro.params

const instances: IInstance[] = [
	{
		name: 'Instance 1',
		apiKey: '1234567890',
		description: 'Instance 1',
		status: 'Active'
	}
]

const queues: IQueue[] = [
	{
		name: 'Queue 1',
		webhook: 'https://webhook.com',
		sleep: 15,
		status: 'Active'
	},
	{
		name: 'Queue 2',
		webhook: 'https://webhook.com',
		sleep: 15,
		status: 'Active'
	}
]
---

<LayoutAdmin title="Proyectos">
	<div class="p-4">
		<h1 class="text-2xl font-bold">Proyecto {slug}</h1>
		<hr class="my-4" />
		<div class="mb-4">
			<h3 class="mb-4 text-xl font-semibold">Colas</h3>
			<TableQueues queues={queues} />
		</div>
		<div class="mb-4">
			<h3 class="mb-4 text-xl font-semibold">Instancias</h3>
			<TableInstance instances={instances} />
		</div>
	</div>
</LayoutAdmin>
